---
interface Props {
    href: string;
    readTime: number;
    text?: string;
}

let {href, readTime, text} = Astro.props as Props;

if (!text)
    text = "Pokraƒçovat";
---

<a role="button" href={href} class="continue disabled" data-readtime={readTime}>
    {text}
</a>

<script>
    const continueButton = document.querySelector('.continue') as HTMLAnchorElement;
    let readTime = parseInt(continueButton.getAttribute('data-readtime') || '0');
    setTimeout(() => {
        continueButton.classList.remove('disabled');
    }, readTime * 1000);
</script>